[Unit]
Description=uWSGI WebApp server instance
After=syslog.target

[Service]
ExecStart=/apps/venv/bin/uwsgi -H /apps/venv --ini-paste /apps/app_repo/<some_path>/production.ini
RuntimeDirectory=/apps/app_repo/<some_path
Restart=always
KillSignal=SIGQUIT
Type=notify
StandardError=syslog
NotifyAccess=all

[Install]
WantedBy=multi-user.target